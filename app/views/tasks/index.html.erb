<h1>タスク一覧</h1>
<p><%= notice %></p>
<table>
 <tr>
   <th>タスク名</th>
   <th>タスク詳細</th>
   <th>終了期限</th>
   <th>状態</th>
   <th>優先順位</th>
   <th>作者</th>
  </tr>
    <% @tasks.each do |task|, id: '.task_row' %>
  <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.dead_line %></td>
      <td><%= task.condition %></td>
      <td><%= task.priority %></td>
      <td><%= task.author %></td>
      <td><%= link_to '詳細', task_path(task.id), id: "show_link" %></td>
      <td><%= link_to '編集', edit_task_path(task.id) %></td>
      <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除していいですか?'} %></td>
  </tr>
    <% end %>  
</table>
<%= link_to '新しくタスクを投稿する', new_task_path %>