<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
    <h2><%= @task.erors.count %>件のエラーがあります</h2>
    <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
  <% end %>

  <div class="task-title">
    <%= form.label :タスク名 %>
    <%= form.text_field :title %>
  </div>
  　
  <div class="task-title">
  <%= form.label :タスク詳細 %>
  <%= form.text_field :content %>
  </div>

  <div class="task-title">
    <%= form.label :終了期限 %>
    <%= form.text_field :dead_line %>
  </div>

  <div class="task-title">
    <%= form.label :状態 %>
    <%= form.text_field :condition %>
  </div>

  <div class="task-title">
    <%= form.label :優先順位 %>
    <%= form.text_field :prioity %>
  </div>

  <div class="task-title">
    <%= form.label :作者%>
    <%= form.text_field :author %>
  </div>
  
  <%= form.submit %>
<% end %>

<% link_to "タスク一覧画面に戻る", tasks_path %>

